{
	"name": "godot-dlang",
	"description": "D bindings for godot",
	"authors": [ "godot-dlang" ],
	"copyright": "Copyright (c) 2007-2022 Juan Linietsky, Ariel Manzur.;\n Copyright (c) 2014-2022 Godot Engine contributors (cf. AUTHORS.md);\n Copyright (c) 2017-2018 Godot-D contributors;\n Copyright (c) 2022-2022 Godot-DLang contributors",
	"license": "MIT",

	"targetType": "library",
	"dflags-linux-dmd": ["-fPIC"],
	"dflags-linux-ldc2": ["-relocation-model=pic"],

	"importPaths": [ "src", "classes" ],
	"sourcePaths": [ "src", "classes" ],

	"dependencies": {
		"godot-dlang:util": "*",
		"utf_bc": "~>0.2.1",
        "sumtype": "~>1.2.7"
	},

	"buildTypes": {
		"doc-json": {
			"buildRequirements": ["allowWarnings"],
			"buildOptions": ["syntaxOnly"],
			"dflags": ["-c", "-Df__dummy.html", "-Xfdocs.json"]
		}
	},

	"subPackages": [
		{
            "name": "util",
            "targetType": "library",
            "sourcePaths": [ "modules/util/" ],
            "importPaths": [ "modules/util/" ]
        },
		{
            "name": "generator",
            "description": "Godot API binder for use with godot-dlang",
            "dflags-windows-ldc": ["--link-internally"],
            "targetType": "executable",
            "dependencies":
            {
                "godot-dlang:util": "*",
                "asdf": "~>0.7.15",
                "dxml": "~>0.4.3",
                "libdparse": "~>0.20.0",
                "sumtype": "~>1.2.7"
            },
            "sourcePaths": [ "modules/tools/generator" ],
            "targetName": "godot-dlang-generator"
        },
		{
            "name": "classfinder",
            "description": "A utility for scanning D files to find classes",
            "targetType": "library",
            "dependencies":
            {
                "godot-dlang:util": "*",
                "emsi_containers": "~>0.8.0",
                "dsymbol": "~>0.14.1",
                "libdparse": "~>0.20.0"
            },
            "sourcePaths": [ "modules/tools/classfinder" ],
            "importPaths": [ "modules/tools/classfinder" ]
        },
        {
            "name": "pregenerate",
            "description": "Command creates Godot entry point mixin automatically",
            "targetType": "executable",
            "dependencies":
            {
                "godot-dlang:util": "*",
                "godot-dlang:classfinder": "*"
            },
            "sourcePaths": [ "modules/tools/pregenerate" ],
            "importPaths": [ "modules/tools/pregenerate" ],
            "targetName": "godot-dlang-pregenerate"
        }, 
        "examples/asteroids",
        "examples/test"
	]
}
