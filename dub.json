{
	"name": "godot-dlang",
	"description": "Godot game engine language bindings",
	"authors": [ "sheepandshepherd", "godot-dlang" ],
	"copyright": "Copyright (c) 2007-2022 Juan Linietsky, Ariel Manzur.; Copyright (c) 2014-2022 Godot Engine contributors (cf. AUTHORS.md); Copyright (c) 2017-2018 Godot-D contributors; Copyright (c) 2022-2022 Godot-DLang contributors",
	"license": "MIT",

	"targetType": "library",
	"dflags-linux-dmd": ["-fPIC"],
	"dflags-linux-ldc2": ["-relocation-model=pic"],

	"importPaths": [ "src", "classes" ],
	"sourcePaths": [ "src", "classes" ],

	"dependencies": {
		"godot-dlang:util": "*",
		"utf_bc": "~>0.2.1",
		"sumtype": "~>1.1.4"
	},

	"buildTypes": {
		"doc-json": {
			"buildRequirements": ["allowWarnings"],
			"buildOptions": ["syntaxOnly"],
			"dflags": ["-c", "-Df__dummy.html", "-Xfdocs.json"]
		}
	},

	"subPackages": [
		{
            "name": "util",
            "targetType": "library",
            "sourcePaths": [ "godot/api/util" ],
            "importPaths": [ "godot/api/util" ]
        },
		{
            "name": "generator",
            "description": "A program that binds Godot's API for use in Godot-DLang",
            "dflags-windows-ldc": ["--link-internally"],
            "dependencies":
            {
                "godot-dlang:util": "*",
                "asdf": "~>0.7.12",
                "dxml": "~>0.4.3",
                "libdparse": "~>0.18.1",
                "sumtype": "~>1.1.4"
            },
            "sourcePaths": [ "godot/api/generator" ]
        },
		{
            "name": "classfinder",
            "description": "A utility for scanning D files to find classes",
            "targetType": "library",
            "dependencies":
            {
                "godot-dlang:util": "*",
                "emsi_containers": "~>0.8.0",
                "dsymbol": "~>0.9.0",
                "libdparse": "~>0.13.1"
            },
            "sourcePaths": [ "godot/api/classfinder" ],
            "importPaths": [ "godot/api/classfinder" ]
        },
        {
            "name": "pregenerate",
            "description": "A preGenerateCommand that creates the Godot entry point mixin automatically",
            "targetType": "executable",
            "dependencies":
            {
                "godot-dlang:util": "*",
                "godot-dlang:class-finder": "*"
            },
            "sourcePaths": [ "godot/api/pregenerate" ],
            "importPaths": [ "godot/api/pregenerate" ]
        }
	]
}
